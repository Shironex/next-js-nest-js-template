# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000  # Frontend URL for CORS configuration
API_DOMAIN="localhost"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://postgres:example@localhost:5432/postgres"

# =============================================================================
# LOGGER CONFIGURATION
# =============================================================================
LOG_LEVEL=debug          # debug | info | warn | error
LOG_CONSOLE_ENABLED=true # Enable/disable console output
LOG_FILE_ENABLED=false   # Enable/disable file logging
LOG_FILE_PATH=./logs     # Directory for log files
LOG_MAX_SIZE=20m         # Maximum size per log file
LOG_MAX_FILES=14d        # How long to keep log files
LOG_DATE_PATTERN=YYYY-MM-DD # Date pattern for log file rotation

# =============================================================================
# EMAIL CONFIGURATION (Development with Mailhog)
# =============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=S3RVER
SMTP_PASSWORD=S3RVER
SMTP_TLS=true
SMTP_FROM_EMAIL=noreply@example.com

# =============================================================================
# MINIO/S3 CONFIGURATION
# =============================================================================
AWS_ENDPOINT="localhost"
AWS_REGION="auto"
AWS_PORT=4569
AWS_ACCESS_KEY="S3RVER"
AWS_SECRET_KEY="S3RVER"
AWS_BUCKET_NAME="example"

# =============================================================================
# REDIS CONFIGURATION (Rate Limiting & Caching)
# =============================================================================
REDIS_URL=redis://localhost:6379    # Redis connection URL for rate limiting

# =============================================================================
# TURNSTILE CONFIGURATION (Cloudflare CAPTCHA)
# =============================================================================
TURNSTILE_SECRET_KEY="1x0000000000000000000000000000000AA"
TURNSTILE_ENDPOINT="https://challenges.cloudflare.com/turnstile/v0/siteverify"

# =============================================================================
# SECURITY / SESSIONS SETTINGS
# =============================================================================
SESSION_DURATION_DAYS=30
SESSION_REFRESH_THRESHOLD_DAYS=15
SESSION_COOKIE_NAME="session"
SESSION_MAX_COUNT=3

