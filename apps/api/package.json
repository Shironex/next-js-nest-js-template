{
  "name": "api",
  "version": "0.3.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build && cp -r generated dist/generated",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "dev:email": "email dev --dir ./src/modules/mail/templates",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed-categories": "ts-node scripts/seed-categories.ts",
    "stripe:listen": "stripe listen --forward-to http://localhost:3001/api/v1/stripe/webhook"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.920.0",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.8",
    "@nestjs/platform-express": "^11.1.8",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@prisma/client": "6.18.0",
    "@react-email/components": "^0.5.7",
    "@react-email/render": "^1.4.0",
    "@stripe/stripe-js": "^8.2.0",
    "@types/multer": "^2.0.0",
    "chalk": "^5.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "prisma": "^6.18.0",
    "react": "^19.1.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.4",
    "stripe": "^19.2.0",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/testing": "^11.1.8",
    "@nestjs/throttler": "^6.4.0",
    "@react-email/preview-server": "^4.3.2",
    "@scalar/nestjs-api-reference": "^1.0.5",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.14.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@types/nodemailer": "^7.0.3",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "prettier": "^3.6.2",
    "react-email": "^4.3.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.46.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "ts-jest",
        {
          "tsconfig": {
            "jsx": "react"
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/*.{spec,test}.{ts,js}",
      "!**/__mocks__/**",
      "!main.ts",
      "!**/*.module.ts",
      "!**/*.dto.ts",
      "!**/*.entity.ts",
      "!**/*.swagger.ts",
      "!**/index.ts",
      "!modules/prisma/**",
      "!modules/logger/formatters/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^chalk$": "<rootDir>/__mocks__/chalk.ts",
      "^winston$": "<rootDir>/__mocks__/winston.ts",
      "^winston-daily-rotate-file$": "<rootDir>/__mocks__/winston-daily-rotate-file.ts",
      "^uuid$": "<rootDir>/__mocks__/uuid.ts",
      "^generated/prisma$": "<rootDir>/../generated/prisma",
      "^@oslojs/encoding$": "<rootDir>/__mocks__/@oslojs/encoding.ts",
      "^@oslojs/crypto/sha2$": "<rootDir>/__mocks__/@oslojs/crypto/sha2.ts",
      "^@oslojs/crypto/subtle$": "<rootDir>/__mocks__/@oslojs/crypto/subtle.ts",
      "^@oslojs/crypto$": "<rootDir>/__mocks__/@oslojs/crypto.ts",
      "^src/modules/prisma/(.*)$": "<rootDir>/__mocks__/src/modules/prisma/$1",
      "^src/modules/logger/(.*)$": "<rootDir>/__mocks__/src/modules/logger/$1",
      "^src/common/(.*)$": "<rootDir>/common/$1",
      "^src/modules/mail/templates/(.*)$": "<rootDir>/modules/mail/templates/$1",
      "^./templates/reset-password-link$": "<rootDir>/__mocks__/email-template.ts",
      "^./templates/email-verification$": "<rootDir>/__mocks__/email-template.ts",
      "^./templates/account-locked$": "<rootDir>/__mocks__/email-template.ts",
      "^ioredis$": "<rootDir>/__mocks__/ioredis.ts"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@oslojs|chalk|uuid).*)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup.ts"
    ]
  }
}
